@model IEnumerable<LunchApp.Models.User>

<h2>Pregled uporabnikov in prijav/odjav kosil</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Priimek</th>
            <th>Uporabniško ime</th>
            <th>Datum</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            if (user.MealSignups != null && user.MealSignups.Any())
            {
                foreach (var signup in user.MealSignups.OrderBy(s => s.Date))
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Username</td>
                        <td>@signup.Date.ToString("dd.MM.yyyy")</td>
                        <td>@(signup.SignedUp ? "PRIJAVLJEN" : "ODJAVLJEN")</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Username</td>
                    <td colspan="2">Brez prijav/odjav</td>
                </tr>
            }
        }
    </tbody>
</table>
