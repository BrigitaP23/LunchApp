@model List<LunchApp.Models.MealSignup>

@{
    ViewBag.Title = "Moje prijave";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2 class="mb-3 text-center">Moje prijave in odjave kosila</h2>

        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Datum</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Date.ToString("dd.MM.yyyy")</td>
                        <td>
                            @if (s.SignedUp)
                            {
                                <span class="badge bg-success">Prijavljen</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Odjavljen</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a href="/Home/Index" class="btn btn-secondary w-100 mt-3">Nazaj</a>
    </div>
</div>
